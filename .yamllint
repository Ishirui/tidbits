---
extends: default

rules:
  comments:
    min-spaces-from-content: 1
  comments-indentation:
    level: error
  document-start:
    level: error
  empty-values: disable   # Sometimes needed in docker-composes
  line-length:
    max: 200
  octal-values:
    forbid-implicit-octal: true
    forbid-explicit-octal: false
  truthy:
    level: error
    check-keys: false
  indentation: disable   # Handled by yamlfmt
